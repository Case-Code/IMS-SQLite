<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_analysislap_flastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first name ,last name"
            android:textColor="#17A9A0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_analysislap_transferdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="00/00/0000"
            android:textColor="#85C0BC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_analysislap_typesofanalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Types of analysis"
            android:textColor="#85C0BC" />

        <TextView
            android:id="@+id/text_analysislap_analysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="analysis"
            android:textColor="#85C0BC" />
    </LinearLayout>
</LinearLayout>