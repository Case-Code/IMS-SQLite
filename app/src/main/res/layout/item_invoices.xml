<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_iteminvoices_svcid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="svc id" />

    <TextView
        android:id="@+id/text_iteminvoices_medicalservices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medical services"
        android:textColor="#2B62AB"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_iteminvoices_mediction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mediction"
            android:textColor="#1786B3"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_iteminvoices_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="cost" />
    </LinearLayout>


</LinearLayout>