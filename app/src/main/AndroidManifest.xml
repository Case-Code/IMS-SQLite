<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ims">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.PersonnelActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activity.FinancialAccountsActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activity.ThePharmacyActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activity.RadiologyLaboratoryActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activity.AnalysisLabActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activity.TheDoctorActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".activity.ReceptionActivity" />

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.ImsProvider"
            android:authorities="com.example.ims"
            android:exported="false" />

    </application>

</manifest>